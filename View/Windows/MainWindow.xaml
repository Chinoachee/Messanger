<Window x:Class="Messanger.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messanger.View.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="loginTextBox"/>
            <TextBox x:Name="passwordTextBox"/>
            <Button x:Name="buttonAccept" Click="buttonAccept_Click"
                    Height="50"/>
        </StackPanel>
        <StackPanel Height="200">
        <Label x:Name="idNameLabel"/>
        <Label x:Name="firstNameLabel"/>
        <Label x:Name="secondNameLabel"/>
        <Label x:Name="loginNameLabel"/>
        <Label x:Name="passwordNameLabel"/>
        </StackPanel>


    </Grid>
</Window>
